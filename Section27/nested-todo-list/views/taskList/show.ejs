
<%- include('../partials/header.ejs') %> 

<div class="box" id="heading" style="cursor: pointer;" onclick="location.href='/lists'" >
  <h1> <%= list.name %>  </h1>
</div>

<div class="box">
  <% list.tasks.forEach(task => { %>
    <form action="/list/<%=list._id%>/task/<%=task._id%>/delete" method="post">
      <div class="item"> 
        <input type="checkbox" name="checkbox" value="<%=task.id%>" onChange="this.form.submit()">
        <p><%= task.name %></p>
      </div>
    </form>
  <% }) %>

  <form class="item" action="/list/<%=list._id%>/task/create" method="post">
    <input type="text" name="newTask" placeholder="New Item" autocomplete="off">
    <button type="submit" name="button">+</button>
  </form>
</div>



<%- include('../partials/footer.ejs') %> 
